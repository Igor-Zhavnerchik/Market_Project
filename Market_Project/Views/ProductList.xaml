<Page x:Class="Market_Project.Views.ProductList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:vm="clr-namespace:Market_Project.ViewModels" 
      xmlns:vr="clr-namespace:Market_Project.ValidationRules"
      d:DataContext="{d:DesignInstance Type=vm:ProductListViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductList">


    <Page.Resources>
        <CollectionViewSource x:Key="CategoriesSource" Source="{Binding Categories}" />
        <CollectionViewSource x:Key="UnitsSource" Source="{Binding Units}" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <DataGrid 
            Style="{StaticResource BasicDataGrid}"
            Grid.Row="0"
            x:Name="dataGrid"
            
            ItemsSource="{Binding Products}" 
            SelectedItem="{Binding SelectedItem}">
            
            <DataGrid.Columns>

                <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True"/>

                <DataGridTextColumn Header="Name" EditingElementStyle="{StaticResource DataGrid_Validation}">
                    <DataGridTextColumn.Binding>
                        <Binding Path="Name">
                            <Binding.ValidationRules>
                                <vr:NonEmptyValidationRule />
                            </Binding.ValidationRules>
                        </Binding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                
                <DataGridComboBoxColumn 
                    Header="Category"
                    SelectedValuePath="Id"
                    SelectedValueBinding="{Binding CategoryId, Mode=TwoWay}"
                    DisplayMemberPath="Name"
                    ItemsSource="{Binding Source={StaticResource CategoriesSource}}">
                </DataGridComboBoxColumn>
                
                <DataGridTextColumn Header="Stock" EditingElementStyle="{StaticResource DataGrid_Validation}">
                    <DataGridTextColumn.Binding>
                        <Binding Path="Stock">
                            <Binding.ValidationRules>
                                <vr:NonNegativeValidationRule />
                            </Binding.ValidationRules>
                        </Binding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                
                <DataGridComboBoxColumn 
                    Header="Units"
                    SelectedValuePath="Id"
                    SelectedValueBinding="{Binding UnitId, Mode=TwoWay}"    
                    DisplayMemberPath="Name"
                    ItemsSource="{Binding Source={StaticResource UnitsSource}}">
                </DataGridComboBoxColumn>
                
                <DataGridTextColumn Header="Price" EditingElementStyle="{StaticResource DataGrid_Validation}">
                    <DataGridTextColumn.Binding>
                        <Binding Path="Price" >
                            <Binding.ValidationRules>
                                <vr:NonNegativeValidationRule />
                            </Binding.ValidationRules>
                        </Binding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                
                <DataGridTextColumn Header="Discount" EditingElementStyle="{StaticResource DataGrid_Validation}">
                    <DataGridTextColumn.Binding>
                        <Binding Path="Discount" >
                            <Binding.ValidationRules>
                                <vr:DiscountValidationRule />
                            </Binding.ValidationRules>
                        </Binding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>

                <DataGridCheckBoxColumn Header="Is Active" Binding="{Binding IsActive}"/>
                
                <DataGridTextColumn Header="Created" Binding="{Binding CreatedAt}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Created By" Binding="{Binding CreatedBy}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Updated" Binding="{Binding UpdatedAt}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Updated By" Binding="{Binding UpdatedBy}" IsReadOnly="True"/>

            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Row="1" Content="Save Changes" Command="{Binding SaveCommand}" Style="{StaticResource BasicButton}"/>
        <Button Grid.Row="2" Content="Add" Command="{Binding OpenAddFormCommand}" Style="{StaticResource BasicButton}"/>
    </Grid>
</Page>
