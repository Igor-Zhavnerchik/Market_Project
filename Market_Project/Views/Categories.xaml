<Page x:Class="Market_Project.Views.Categories"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:vm="clr-namespace:Market_Project.ViewModels"
      xmlns:vr="clr-namespace:Market_Project.ValidationRules"
      d:DataContext="{d:DesignInstance Type=vm:CategoriesViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Categories">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>


        <DataGrid 
            Style="{StaticResource BasicDataGrid}"
            Grid.Row="0"
            x:Name="dataGrid"
            
            ItemsSource="{Binding Categories}" 
            SelectedItem="{Binding SelectedItem}">

            <DataGrid.Columns>  
                
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True"></DataGridTextColumn>
                
                <DataGridTextColumn Header="Name" EditingElementStyle="{StaticResource DataGrid_Validation}">
                    <DataGridTextColumn.Binding>
                        <Binding Path="Name">
                            <Binding.ValidationRules>
                                <vr:NonEmptyValidationRule />
                            </Binding.ValidationRules>
                        </Binding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                
                <DataGridCheckBoxColumn Header="Is Active" Binding="{Binding IsActive}"></DataGridCheckBoxColumn>
                
            </DataGrid.Columns>
        </DataGrid>
        
        <Button Grid.Row="1" Content="Save Changes" Click="Button_SaveChanges" Style="{StaticResource BasicButton}"/>

    </Grid>
</Page>
