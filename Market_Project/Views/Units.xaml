<Page x:Class="Market_Project.Views.Units"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:vm="clr-namespace:Market_Project.ViewModels"
      xmlns:vr="clr-namespace:Market_Project.ValidationRules"
      d:DataContext="{d:DesignInstance Type=vm:UnitsViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Units">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>


        <DataGrid 
        Style="{StaticResource BasicDataGrid}"
        Grid.Row="0"
        x:Name="dataGrid"
            
        ItemsSource="{Binding Units}" 
        SelectedItem="{Binding SelectedItem}">
            
            <DataGrid.Columns>

                <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True"/>

                <DataGridTextColumn Header="Name" EditingElementStyle="{StaticResource DataGrid_Validation}">
                    <DataGridTextColumn.Binding>
                        <Binding Path="Name">
                            <Binding.ValidationRules>
                                <vr:NonEmptyValidationRule />
                            </Binding.ValidationRules>
                        </Binding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Full Name" EditingElementStyle="{StaticResource DataGrid_Validation}">
                    <DataGridTextColumn.Binding>
                        <Binding Path="FullName">
                            <Binding.ValidationRules>
                                <vr:NonEmptyValidationRule />
                            </Binding.ValidationRules>
                        </Binding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>

                <DataGridCheckBoxColumn Header="Is Divisible" Binding="{Binding IsDivisible}"/>

                <DataGridCheckBoxColumn Header="Is Active" Binding="{Binding IsActive}"/>


                <DataGridTextColumn Header="Created" Binding="{Binding CreatedAt}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Created By" Binding="{Binding CreatedBy}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Updated" Binding="{Binding UpdatedAt}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Updated By" Binding="{Binding UpdatedBy}" IsReadOnly="True"/>

            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Row="1" Content="Save Changes" Command="{Binding SaveCommand}" Style="{StaticResource BasicButton}"/>
        <Button Grid.Row="2" Content="Add" Command="{Binding OpenAddFormCommand}" Style="{StaticResource BasicButton}"/>
    </Grid>
</Page>
